extend layout

block content
  
  header
    block header
      nav.navbar.navbar-default      
        .container-fluid
          //- Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation              
              span.icon-bar               
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/'): img(src="images/logo.png", alt="FreeL", height="20")
          //- Collect the nav links, forms, and other content for toggling
          #bs-navbar-collapse-1.collapse.navbar-collapse          
            p.navbar-text
              if user
                | Signed in as #{user.username}
              else
                | Welcome, traveler
                         
            ul.nav.navbar-nav.navbar-right
              if user
                li: a(href="/logout") Logout
              else
                li: a(href="/login") Login
                li: a(href="/register") Register

          
  main
    block main        
  
  block footer
    footer
      .container
        h3.text-primary Place sticky footer content here.
  
