extend layout

block content
  
  block navbar
    nav.navbar.navbar-default      
      .container-fluid
        //- Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation              
            span.icon-bar               
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') FreeL
        //- Collect the nav links, forms, and other content for toggling
        #bs-navbar-collapse-1.collapse.navbar-collapse
          - var greeting = user ? "Signed in as #{user.username}" : "Welcome, traveler"
          
          p.navbar-text= greeting
                       
          ul.nav.navbar-nav.navbar-right
            if user
              li: a(href="/logout") Logout
            else
              li: a(href="/login") Login
              li: a(href="/register") Register

          
  main
    block main        
  
  block footer
    footer
      .container
        h3.text-primary Place sticky footer content here.
  
