extends page

block main
  .jumbotron
    .container
      h1 Hello, world!
      p A site where non-paying students of Coursera can post their assignments and review assignments of others.
      p
        a.btn.btn-primary.btn-lg(href='#', role='button') Learn more
  
  .container
    .row
      .col-sm-12.col-xs-12
        ul.list-group
          each course, ind in courses
            li.list-group-item            
              h2.list-group-item-heading= course.name
              
              p.list-group-item-text.table-hover
                a(href="#") Week 1
              
              a(href="#") Week1
              
              p
                .btn-group.btn-group-lg(role='group')
                  button.btn.btn-default(type='button') Week 1   
                  button.btn.btn-default(type='button') Middle  
                  button.btn.btn-default(type='button') Right

              table.table.table-striped.large
                each week in course.weeks
                  tbody
                    td Week #{week.number}
                    td: a(href="course/#{course.id}/week#{week.number}/post") Post
                      | 
                      span.badge= week.posts
                    td: a(href="course/#{course.id}/week#{week.number}/review") Review
                      | 
                      span.badge= week.toReview
                    td: a(href="course/#{course.id}/week#{week.number}/overview") Overview
            unless ind === courses.length - 1
              li.list-group-item.list-group-item-divider
